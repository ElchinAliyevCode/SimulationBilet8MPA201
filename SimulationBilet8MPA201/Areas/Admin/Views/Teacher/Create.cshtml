@model TeacherCreateVM
<div class="container">
    <div asp-validation-summary="ModelOnly" class="text-danger"><</div>
    <div class="row">
        <form method="post" asp-area="Admin" asp-controller="Teacher" asp-action="Create">

            <div class="form-group">
                <label asp-for="FirstName">FirstName</label>
                <input asp-for="FirstName" placeholder="Enter FirstName">
                <span asp-validation-for="FirstName" class=" text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName">LastName</label>
                <input asp-for="LastName" placeholder="Enter LastName">
                <span asp-validation-for="LastName" class=" text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>