@model List<TeacherGetVM>
<div class="container">
	<div>
		<a asp-area="Admin" asp-controller="Teacher" asp-action="Create" class="btn btn-success">Create</a>
	</div>
	<div class="row">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">FirstName</th>
					<th scope="col">LastName</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var teacher in Model)
				{
					<tr>
						<th scope="row">@teacher.Id</th>
						<td>@teacher.FirstName</td>
						<td>@teacher.LastName</td>
						<td>
							<a asp-area="Admin" asp-controller="Teacher" asp-action="Update" asp-route-id="@teacher.Id" class="btn btn-warning">Update</a>
							<a asp-area="Admin" asp-controller="Teacher" asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-danger deleteBtn">Delete</a>
						</td>
					</tr>
				}

			</tbody>
		</table>

	</div>
</div>